@model List<User>

@{
    ViewData["Title"] = "Users of " + ViewBag.CustomerName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h2>@ViewData["Title"]</h2>
        <div class="table-responsive">
            <table class="table table-hover rounded-3 overflow-hidden">
                <thead class="table-light text-center">
                    <tr>
                        <th>#</th>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr><td colspan="5" class="text-center">No users found.</td></tr>
                    }
                    else
                    {
                        int i = 1;
                        foreach (var user in Model)
                        {
                            <tr>
                                <td>@(i++)</td>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>@user.UserRoleGuid</td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-outline-info">Edit</a>
                                    <a href="#" class="btn btn-sm btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>

    </div>
</div>
