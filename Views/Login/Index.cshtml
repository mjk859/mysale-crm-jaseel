@model MySaleApp.Admin.UI.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<!-- Log In page -->
<div class="container-md">
    <div class="row vh-100 d-flex justify-content-center">
        <div class="col-12 align-center">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-4 mx-auto">
                        <div class="card">

                            <div class="card-body p-0">
                                <div class="text-center p-3">
                                    <a href="#" class="logo logo-admin">
                                        <img src="assets/images/LoginLogo.png" height="80" alt="logo" class="auth-logo">
                                    </a>
                                    <h4 class="mt-3 mb-1 fw-semibold font-18">Sign in to Continue</h4>
                                </div>
                            </div>

                            <div class="card-body pt-0">
                                <form asp-action="Index" asp-controller="Login" method="post" class="my-4">

                                    @if (!string.IsNullOrEmpty(Context.Request.Query["ReturnUrl"]))
                                    {
                                        <input type="hidden" name="ReturnUrl" value="@Context.Request.Query["ReturnUrl"]" />
                                    }

                                    <div class="form-group mb-2">
                                        <label class="form-label" for="username">Username</label>
                                        <input type="text" class="form-control" id="UserName" name="UserName" autocomplete="off" placeholder="Enter User name" required>
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" for="userpassword">Password</label>
                                        <input type="password" class="form-control" name="Password" id="Password" autocomplete="off" placeholder="Enter Password" required>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-group mb-0 row">
                                        <div class="col-12">
                                            <div class="d-grid mt-3">
                                                <button class="btn btn-primary" type="submit">Log In <i class="bi bi-box-arrow-in-right"></i></button>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                                <div style="margin-top: 20px;"></div>

                                @if (TempData["Message"] != null)
                                {
                                    <div id="loginAlert" class="alert alert-outline-success text-center" role="alert">
                                        @TempData["Message"]
                                    </div>
                                }
                                @if (TempData["ErrorMessage"] != null)
                                {
                                    <div id="loginAlert" class="alert alert-outline-danger text-center" role="alert">
                                        @TempData["ErrorMessage"]
                                    </div>
                                }

                            </div><!--end card-body-->
                        </div><!--end card-->
                    </div><!--end col-->
                </div><!--end row-->



            </div><!--end card-body-->
        </div><!--end col-->
    </div><!--end row-->
</div><!--end container-->