@model MySaleApp.Admin.UI.Models.PlanDetails

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Content-->
<div class="page-content-tab">

    <div class="container-fluid">
        <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-end">
                        <ol class="breadcrumb">
                        </ol>
                    </div>
                    <h4 class="page-title">Add Plan Details</h4>
                </div>
            </div>
        </div>
        <!-- end page title-->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">

                    @*<div class="card-header">
                    </div>*@

                    <div class="card-body">
                        <form class="my-4 needs-validation" asp-action="Create" asp-controller="PlanDetails" method="post" novalidate>
                            <div class="row">
                                <div class="col-lg-6">

                                    <div class="mb-2 row">
                                        <label asp-for="PlanId" class="col-sm-3 col-control-label text-end">Plan</label>
                                        <div class="col-sm-9">
                                            <select asp-for="PlanId" class="form-control" id="planDropdown" required>
                                                <option value="">Select a Plan</option>
                                            </select>
                                            <div class="invalid-feedback">
                                                Please Select a Valid Plan
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-2 row">
                                        <label asp-for="Description" class="col-sm-3 col-control-label text-end">Description</label>
                                        <div class="col-sm-9">
                                            <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
                                            <div class="invalid-feedback">
                                                Please Enter Description
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-2 row">
                                        <label class="col-sm-3 col-control-label text-end"></label>
                                        <div class="col-sm-9">
                                            <div class="form-check form-switch form-switch-success">
                                                <input class="form-check-input" type="checkbox" asp-for="isBold">
                                                <label class="form-check-label" for="isBold">Is Bold</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-2 row">
                                        <label class="col-sm-3 col-control-label text-end"></label>
                                        <div class="col-sm-9">
                                            <div class="form-check form-switch form-switch-success">
                                                <input class="form-check-input" type="checkbox" asp-for="isItalic">
                                                <label class="form-check-label" for="isItalic">Is Italic</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-2 row">
                                        <label class="col-sm-3 col-control-label text-end"></label>
                                        <div class="col-sm-9">
                                            <div class="form-check form-switch form-switch-success">
                                                <input class="form-check-input" type="checkbox" asp-for="isUnderLine">
                                                <label class="form-check-label" for="isUnderLine">Is UnderLine</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-2 row">
                                        <label asp-for="Color" class="col-sm-3 col-control-label text-end">Color</label>
                                        <div class="col-sm-9">
                                            <input type="text" pattern="[A-Za-z\s]+" maxlength="20" class="form-control" asp-for="Color" autocomplete="off" required>
                                            <div class="invalid-feedback">
                                                Please Enter Color Name
                                            </div>
                                        </div>
                                    </div>

                                   @*  <div class="mb-2 row">
                                        <label asp-for="Price" class="col-sm-3 col-control-label text-end">Price</label>
                                        <div class="col-sm-9">
                                            <input type="text" pattern="^(\d{1,3}(,\d{3})*|(\d+))(\.\d{2})?$" maxlength="10" class="form-control" asp-for="Price" autocomplete="off" required>
                                            <div class="invalid-feedback">
                                                Please Enter Valid Price
                                            </div>
                                        </div>
                                    </div> *@

                                    <div class="mb-2 row">
                                        <label class="col-sm-3 col-control-label text-end"></label>
                                        <div class="col-sm-9">
                                            <div class="form-check form-switch form-switch-success">
                                                <input class="form-check-input" type="checkbox" asp-for="Active" checked>
                                                <label class="form-check-label" for="Active">Active</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3 row">
                                    </div>

                                    <!-- Save and Back Buttons Row -->
                                    <div class="mb-4 row">
                                        <div class="col-lg-12 text-center">
                                            <button class="btn btn-de-primary btn-fixed-width" type="submit">Add</button>
                                            <a class="btn btn-de-danger btn-fixed-width" asp-action="Index">Back</a>
                                        </div>
                                    </div><!-- End Save and Back Buttons Row -->
                                </div>
                            </div>

                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/assets/js/code.jquery.com_jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $.ajax({
            url: '@Url.Action("GetPlans", "Plan")',
            success: function (data) {
                var planDropdown = $('#planDropdown');
                $.each(data, function (index, plan) {
                    planDropdown.append($('<option>').text(plan.name).attr('value', plan.id));
                });
            }
        });
    });
</script>