@model MySaleApp.Admin.UI.Models.SystemUserRole

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Content-->
<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between mb-3">
            <h4>Add User Roles</h4>
        </div>

        <div>
            <form class="my-4 needs-validation" asp-action="Create" asp-controller="UserRoles" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="UserRoleName" class="form-label">User Role Name</label>
                    <input type="text" class="form-control" asp-for="UserRoleName" autocomplete="off" placeholder="Enter User Role Name" required>
                    <div class="invalid-feedback">Please Enter User Role Name</div>
                </div>
                <div class="mb-3">
                    <label asp-for="SystemName" class="form-label">System Name</label>
                    <input type="text" class="form-control" asp-for="SystemName" autocomplete="off" placeholder="Enter System Name" required>
                    <div class="invalid-feedback">Please Enter System Name</div>
                </div>
                <div class="mb-3">
                    <div class="form-check form-switch form-switch-success">
                        <input class="form-check-input" type="checkbox" asp-for="IsSystemRole" checked>
                        <label class="form-check-label" for="IsSystemRole">Is System Role</label>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="CustomerGuid" class="form-label">Customer</label>
                    <select asp-for="CustomerGuid" class="form-control" asp-items="ViewBag.CustomerList" required>
                        <option value="">-- Select a Customer --</option>
                    </select>
                    <div class="invalid-feedback">Please select a customer.</div>
                </div>
                <button class="btn btn-primary btn-fixed-width" type="submit">Add</button>
                <a class="btn btn-outline-secondary btn-fixed-width" asp-action="Index">Back</a>



            </form>
        </div>



     </div>
</div>