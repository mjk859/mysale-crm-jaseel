<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>MySale - Admin & Dashboard </title>
    <link rel="shortcut icon" href="@Url.Content("~/assets/images/LoginLogo.png")">
    <!-- App css -->
    <link rel="stylesheet" href="@Url.Content("~/assets/css/bootstrap.min.css")" type="text/css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body>
    <div class="app-container">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar d-flex flex-column align-items-center py-4">
            <button id="toggleButton" class="btn btn-link text-white mb-4" aria-label="Toggle Sidebar">
                <i id="toggleIcon" class="bi bi-list"></i> <!-- Menu icon -->
            </button>
            <div class="sidebar-links">
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-link text-white my-2 d-flex align-items-center">
                    <i class="bi bi-grid"></i>
                    <span class="ms-2 link-text">Dashboard</span>
                </a>
                <a asp-controller="Customer" asp-action="Index" class="btn btn-link text-white my-2 d-flex align-items-center">
                    <i class="bi bi-people"></i>
                    <span class="ms-2 link-text">Customers</span>
                </a>
                <a asp-controller="User" asp-action="Index" class="btn btn-link text-white my-2 d-flex align-items-center">
                    <i class="bi bi-person"></i>
                    <span class="ms-2 link-text">Users</span>
                </a>
                <a asp-controller="Plan" asp-action="Index" class="btn btn-link text-white my-2 d-flex align-items-center">
                    <i class="bi bi-card-checklist"></i>
                    <span class="ms-2 link-text">Plans</span>
                </a>
                <a asp-controller="SystemUser" asp-action="Index" class="btn btn-link text-white my-2 d-flex align-items-center">
                    <i class="bi bi-person-gear"></i>
                    <span class="ms-2 link-text">System Users</span>
                </a>
                <a asp-controller="UserRoles" asp-action="Index" class="btn btn-link text-white my-2 d-flex align-items-center">
                    <i class="bi bi-person-lines-fill"></i>
                    <span class="ms-2 link-text">User Roles</span>
                </a>
                <a asp-controller="Dealer" asp-action="Index" class="btn btn-link text-white my-2 d-flex align-items-center">
                    <i class="bi bi-person-badge"></i>
                    <span class="ms-2 link-text">Dealers</span>
                </a>

            </div>
        </nav>

        <!-- Main Content Area -->
        <div class="main-content">
            <!-- Topbar -->
            <header class="topbar">
                <div class="logo">
                    <img src="~/assets/images/LoginLogo.png" alt="Logo" height="40" />
                </div>
                <input type="text" class="search-box" name="searchBox" placeholder="Search..." />

                <div class="profile-info">
                    <span>Hello, @(User?.Identity?.Name ?? "Guest")</span>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <img src="https://i.pravatar.cc/40" class="rounded-circle" />
                        </button>
                        <ul class="dropdown-menu shadow">
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><a class="dropdown-item" asp-controller="Login" asp-action="ChangePassword">Change Password</a></li>
                            <div class="dropdown-divider"></div>
                            <li>
                                <form asp-controller="Login" asp-action="Logout" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item text-danger">Logout</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="page-content">
                @RenderBody()
            </main>
        </div>
    </div>

    
    <script>
        const toggleButton = document.getElementById('toggleButton');
        const toggleIcon = document.getElementById('toggleIcon');
        const sidebar = document.getElementById('sidebar');

        toggleButton.addEventListener('click', () => {
            sidebar.classList.toggle('expanded');

            // Change icon
            if (sidebar.classList.contains('expanded')) {
                toggleIcon.classList.remove('bi-list');
                toggleIcon.classList.add('bi-arrow-left');
            } else {
                toggleIcon.classList.remove('bi-arrow-left');
                toggleIcon.classList.add('bi-list');
            }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
