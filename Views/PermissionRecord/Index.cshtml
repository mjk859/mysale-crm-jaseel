<!-- Page Content-->
<div class="page-content-tab">

    <div class="container-fluid">
        <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="float-end">
                    </div>
                    <h4 class="page-title">Permission Record List</h4>
                </div>
            </div>
        </div>
        <!-- end page title-->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">

                    <div class="card-header">
                        <form asp-action="Index">

                            <div class="row justify-content-end">

                                <div class="col-sm-2 text-end">
                                </div>
                                <div class="col-sm-2 text-end">
                                </div>
                                <div class="col-sm-2">
                                </div>
                                <div class="col-sm-2 text-end">
                                </div>

                                @* <div class="col-sm-2 text-end">
                                    <a asp-action="Create" class="btn btn-primary">Create New</a>
                                </div> *@
                                <div class="col-sm-2 text-end">
                                    <div class="input-group mb-3">
                                        <input type="text" name="searchText" class="form-control" placeholder="Search by name" autocomplete="off">
                                        <button class="btn btn-secondary" type="submit"><i class="bi bi-arrow-clockwise"></i></button>
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Permission Guid</th>
                                        <th style="text-align: center;">Permission Name</th>
                                        <th style="text-align: center;">System Name</th>
                                        <th style="text-align: center;">Category</th>
                                        <th style="text-align: center;">Status</th>
                                        <th style="text-align: center;">Created By</th>
                                        <th style="text-align: center;">Created Date</th>
                                        @* <th style="text-align: center;">Actions</th> *@
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.PermissionGuid</td>
                                            <td>@item.PermissionName</td>
                                            <td>@item.SystemName</td>
                                            <td>@item.Category</td>
                                            <td>@(item.Status ? "Active" : "Inactive")</td>
                                            <td>@item.CreatedBy</td>
                                            <td>@item.CreatedDate.ToShortDateString()</td>

                                            @* <td>
                                                <div class="btn-group">
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success edit-button btn-xs">Edit</a>
                                                    <a asp-action="Delete" class="btn btn-danger delete-button btn-xs" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this Plan?')">Delete</a>
                                                </div>
                                            </td> *@
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Pagination-->
                   @*  <div class="container">

                        @if (pager.TotalPages > 0)
                        {
                            <ul class="pagination justify-content-end">

                                @if (pager.CurrentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-controller="PermissionRecord" asp-action="Index" asp-route-pg="1">First</a>
                                    </li>
                                    <li>
                                        <a class="page-link" asp-controller="PermissionRecord" asp-action="Index" asp-route-pg="@(pager.CurrentPage - 1)">Previous</a>
                                    </li>
                                }

                                @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                                {
                                    <li class="page-item @(pge == pager.CurrentPage ? "active":"")">
                                        <a class="page-link" asp-controller="PermissionRecord" asp-action="Index" asp-route-pg="@pge"> @pge</a>
                                    </li>
                                }

                                @if (pager.CurrentPage < pager.TotalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-controller="PermissionRecord" asp-action="Index" asp-route-pg="@(pager.CurrentPage + 1)">Next</a>
                                    </li>
                                    <li>
                                        <a class="page-link" asp-controller="PermissionRecord" asp-action="Index" asp-route-pg="@(pager.TotalPages)">Last</a>
                                    </li>
                                }

                            </ul>
                        }
                    </div> *@
                    <!-- End Pagination-->

                </div>
            </div>
        </div>
    </div>
</div>

