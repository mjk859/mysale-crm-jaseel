@using MySaleApp.Admin.UI.Model
@model MySaleApp.Admin.UI.ViewModel.PagedResultViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Content-->
<div class="card">
    <div class="card-body">

        <!-- Page-Title -->
        <div class="d-flex justify-content-between mb-3">
            <h2>Users list</h2>
            <div class="d-flex justify-content-between mb-3 gap-2">
                @* <a class="btn btn-primary" href="#">CREATE USER</a> *@
            </div>
        </div>
        <!-- end page title-->

        <div>
            <form asp-action="Index">
                <div class="row">
                    <div class="col-sm-2">
                        <label for="Search">Search By</label>
                    </div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-2">From</div>
                    <div class="col-sm-2">To</div>
                    <div class="col-sm-2"></div>
                </div>

                <div class="row">
                    <div class="col-sm-2 text-end">
                        <select name="searchType" class="form-select">
                            <option value="">--Select--</option>
                            <option value="UserGuid">User Guid</option>
                            <option value="ParentCustomerId">Parent Customer Id</option>
                            <option value="UserName">User Name</option>

                            <option value="MobileNo">Mobile Number</option>
                            <option value="MobileVerificationOtp">Mobile Verification Otp</option>
                            <option value="isMobileVerified">Mobile Verified</option>

                            <option value="Email">Email</option>
                            <option value="EmailVerificationOtp">Email Verification Otp</option>
                            <option value="isEmailVerified">Email Verified</option>

                            <option value="Password">Password</option>
                            <option value="PasswordSalt">Password Salt</option>
                            <option value="isPasswordCreated">Password Created</option>

                            <option value="isActive">Active</option>
                            <option value="isBlocked">Blocked</option>
                            <option value="isDeleted">Deleted</option>

                            <option value="CreatedDate">Created Date</option>
                            <option value="CreatedBy">Created By</option>
                            <option value="ModifiedDate">Modified Date</option>
                            <option value="ModifiedBy">Modified By</option>

                            <option value="LastActivityDateUtc">Last Activity Date</option>
                            <option value="LastIpAddress">Last Ip Address</option>
                            <option value="LastLoginDateUtc">Last Login Date</option>

                            <option value="IsSystemAccount">System Account</option>
                            <option value="CountryDialCode">Country Dial Code</option>

                        </select>
                    </div>
                    <div class="col-sm-2 text-end">
                        <input type="text" name="searchQuery" class="form-control" placeholder="Search Text" autocomplete="off">
                    </div>

                    <div class="col-sm-2">
                        <input type="date" name="fromDate" id="fromDate" class="form-control">
                    </div>

                    <div class="col-sm-2 text-end">
                        <input type="date" name="toDate" id="toDate" class="form-control">
                    </div>

                    <div class="col-sm-2 text-end">
                        <div class="input-group mb-3">
                            <button class="btn btn-secondary" type="submit"><i class="bi bi-search"></i></button>
                            <button class="btn btn-secondary" id="refreshButton" style="margin-left: 15px;"><i class="bi bi-arrow-clockwise"></i></button>

                        </div>
                    </div>


                </div>
            </form>
        </div>

        <div class="table-responsive">
            <table class="table table-hover rounded-3 overflow-hidden">
                <thead class="table-primary">
                    <tr>
                        @*<th style="text-align: center;">User Guid</th>*@
                        <th style="text-align: center;">User<br>Name</th>
                        <th style="text-align: center;">Customer<br>Name</th>

                        <th style="text-align: center;">Country<br>Dial<br>Code</th>
                        @* <th style="text-align: center;">Mobile<br>Number</th>
                                        <th style="text-align: center;">Mobile<br>Verified</th> *@
                        @*<th>Email<br>Address</th>*@
                        @*<th>Email<br>Verified</th>*@

                        <th style="text-align: center;">Active</th>
                        <th style="text-align: center;">Blocked</th>
                        @* <th style="text-align: center;">Deleted</th> *@
                        @*<th>Is<br>System<br>Account</th>*@

                        @*<th>Last<br>Activity<br>Date</th>*@
                        @* <th style="text-align: center;">Last<br>Ip<br>Address</th> *@
                        @* <th style="text-align: center;">Last<br>Login<br>Date</th> *@
                        <th style="text-align: center;">Created<br>Date</th>

                        @* <th style="text-align: center;">Actions</th> *@
                    </tr>
                                        
                </thead>
                <tbody>
                    @foreach (var item in Model.Users)
                    {
                        <tr>
                            @*<td>@item.UserGuid</td>*@
                            <td>@item.UserName</td>
                            <td>@item.CustomerName</td>
                            <td>@item.CountryDialCode</td>

                            @* <td>@item.MobileNo</td>
                               <td>@(item.IsMobileVerified ? "Yes" : "No")</td> *@
                            @*<td>@item.Email</td>*@
                            @*<td>@(item.isEmailVerified ? "Yes" : "No")</td>*@

                            <td>@(item.IsActive ? "Yes" : "No")</td>
                            <td>@(item.IsBlocked ? "Yes" : "No")</td>
                            @* <td>@(item.IsDeleted ? "Yes" : "No")</td> *@
                            @*<td>@(item.IsSystemAccount ? "Yes" : "No")</td>*@

                            @*<td>@item.LastActivityDateUtc</td>*@
                            @* <td>@item.LastIpAddress</td> *@
                            @* <td>@item.LastLoginDateUtc.ToShortDateString()</td> *@
                            <td>@item.CreatedDate.ToShortDateString()</td>

                            @* <td>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-success edit-button btn-xs">Edit</a>
                                    <a asp-action="Delete" class="btn btn-danger delete-button btn-xs" asp-route-id="@item.UserId" onclick="return confirm('Are you sure you want to delete this User?')">Delete</a>
                               </td> *@
                                                
                        </tr>
                    }
                </tbody>
                                    
            </table>
        </div>

                    
        <div class="d-flex justify-content-between align-items-center p-3">
            <!-- Pagination-->
            @if (Model.TotalPages > 1)
            {
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-pg="@(Model.PageIndex - 1)"
                               asp-route-pageSize="@ViewData["PageSize"]">Prev</a>
                        </li>

                        @if (Model.TotalPages > 7)
                        {
                            <li class="page-item @(Model.PageIndex == 1 ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pg="1" asp-route-pageSize="@ViewData["PageSize"]">1</a>
                            </li>

                            @if (Model.PageIndex > 4)
                            {
                                <li class="page-item disabled"><span class="page-link">...</span></li>
                            }

                            @for (int i = Model.PageIndex - 2; i <= Model.PageIndex + 2; i++)
                            {
                                if (i > 1 && i < Model.TotalPages)
                                {
                                    <li class="page-item @(Model.PageIndex == i ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-pg="@i" asp-route-pageSize="@ViewData["PageSize"]">@i</a>
                                    </li>
                                }
                            }

                            @if (Model.PageIndex < Model.TotalPages - 3)
                            {
                                <li class="page-item disabled"><span class="page-link">...</span></li>
                            }

                            <li class="page-item @(Model.PageIndex == Model.TotalPages ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pg="@Model.TotalPages" asp-route-pageSize="@ViewData["PageSize"]">@Model.TotalPages</a>
                            </li>
                        }
                        else
                        {
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(Model.PageIndex == i ? "active" : "")">
                                    <a class="page-link" asp-action="Index"
                                       asp-route-pg="@i"
                                       asp-route-pageSize="@ViewData["PageSize"]">@i</a>
                                </li>
                            }
                        }

                        <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-pg="@(Model.PageIndex + 1)"
                               asp-route-pageSize="@ViewData["PageSize"]">Next</a>
                        </li>
                    </ul>
                </nav>
            }

            <!-- Page size -->
            <div class="d-flex align-items-center">
                <form method="get" asp-action="Index" class="d-flex align-items-center">
                    <label for="pageSize" class="me-2">Page Size:</label>
                    <select id="pageSize" name="pageSize"
                            class="form-select form-select-sm"
                            onchange="this.form.submit()"
                            asp-items="@(ViewData["PageSizes"] as SelectList)">
                    </select>
                    <input type="hidden" name="pg" value="@Model.PageIndex" />
                </form>
            </div>
                        
        </div>

     </div>
</div>